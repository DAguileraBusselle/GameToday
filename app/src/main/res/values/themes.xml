<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.GameToday" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_200</item>
        <item name="colorPrimaryVariant">@color/gris_guay</item>
        <item name="colorOnPrimary">@color/morao_chilling</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">#6C6C6C</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">#E6191919</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.GameToday.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.PopupMenu" parent="Widget.AppCompat.PopupMenu">
        <item name="android:textColor">@color/gris_chilling_menos</item>
        <item name="android:textColorSecondary">@color/gris_chilling_menos</item>
        <item name="fontFamily">@font/conthrax_sb</item>
        <item name="android:backgroundTint">@color/gris_chilling</item>
    </style>

    <style name="Theme.GameToday.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.GameToday.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>
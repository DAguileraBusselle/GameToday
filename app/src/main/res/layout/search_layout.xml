<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="5dp"
    android:layout_marginBottom="5dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/trans"
    >

    <LinearLayout
        android:layout_alignParentLeft="true"
        android:id="@+id/llUserFeed"
        android:layout_width="match_parent"
        android:layout_toLeftOf="@id/btnSeguir"
        android:layout_height="50dp"
        android:orientation="horizontal">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/ivFotoPerfilSearch"
            android:src="@drawable/default_pic"
            android:layout_width="30dp"
            android:layout_height="wrap_content"
            />

        <TextView
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="5dp"
            android:maxLines="1"
            android:textScaleX="1"
            android:id="@+id/tvNombreUserSearch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="aaaaaaaaaaaaaaaaaaaaaaa"
            android:textColor="@color/morao_chilling"
            android:fontFamily="@font/conthrax_sb"
            android:textSize="18sp"
            />





    </LinearLayout>

    <Button
        android:id="@+id/btnSeguir"
        android:background="@drawable/outline_button"
        android:text="@string/siguiendo"
        android:layout_marginRight="5dp"
        android:fontFamily="@font/conthrax_sb"
        android:layout_alignParentRight="true"
        android:layout_width="145dp"
        android:layout_height="wrap_content"

        />





</RelativeLayout>
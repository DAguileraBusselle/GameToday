<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="5dp"
    android:layout_marginBottom="5dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/trans"
    >

    <LinearLayout
        android:layout_marginLeft="@dimen/padding"
        android:layout_alignParentLeft="true"
        android:id="@+id/llUserFeed"
        android:layout_width="match_parent"
        android:layout_toLeftOf="@id/btnSeguir"
        android:layout_height="50dp"
        android:orientation="horizontal">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/ivFotoPerfilSearch"
            android:src="@drawable/default_pic"
            android:layout_width="30dp"
            android:layout_height="wrap_content"
            />

        <LinearLayout
            app:layout_constraintTop_toTopOf="parent"
            android:layout_width="match_parent"
            android:layout_gravity="center_vertical"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1"
            >
            <TextView
                android:layout_gravity="bottom"
                android:layout_marginLeft="5dp"
                android:maxLines="1"
                android:textScaleX="1"
                android:layout_weight="2"
                android:id="@+id/tvNombreUserSearch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/morao_chilling"
                android:fontFamily="@font/conthrax_sb"
                android:textSize="17sp"
                />

            <TextView
                android:id="@+id/tvCorreoUserSearch"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:layout_marginLeft="5dp"
                android:textColor="@color/morao_trans_menos"
                android:fontFamily="@font/conthrax_sb"
                android:textSize="10sp"
                />
        </LinearLayout>




    </LinearLayout>

    <Button
        android:id="@+id/btnSeguir"
        android:layout_width="145dp"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="5dp"
        android:background="@drawable/outline_button_morao"
        android:fontFamily="@font/conthrax_sb"
        android:text="@string/siguiendo"

        />





</RelativeLayout>
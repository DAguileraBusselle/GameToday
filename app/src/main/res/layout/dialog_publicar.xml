<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/gris_guay"
    android:padding="@dimen/padding">

    <ImageView
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:id="@+id/btnCancelarPubli"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/cross"
        />



    <EditText
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/btnCancelarPubli"
        android:id="@+id/etTextoPubli"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/morao_chilling"
        android:backgroundTint="@color/morao_chilling"
        android:fontFamily="@font/conthrax_sb"
        />

    <ImageView
        app:layout_constraintTop_toBottomOf="@id/etTextoPubli"
        app:layout_constraintRight_toRightOf="parent"
        android:id="@+id/btnAceptarPubli"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:src="@drawable/tick"/>




</androidx.constraintlayout.widget.ConstraintLayout>
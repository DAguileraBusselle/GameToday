<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@drawable/fondohex"
    android:padding="@dimen/padding">

    <ImageView
        android:id="@+id/ivLogoMain"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/btnIniciarSesion"
        android:src="@drawable/mandologo"
        android:layout_alignParentTop="true" />

    <Button
        android:id="@+id/btnIniciarSesion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:fontFamily="@font/conthrax_sb"
        android:layout_above="@+id/btnRegistrar"
        android:background="@drawable/outline_button"
        android:text="@string/btn_iniciar"

        />

    <Button
        android:id="@+id/btnRegistrar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:textSize="18sp"
        android:layout_marginTop="25dp"
        android:layout_marginBottom="50dp"
        android:fontFamily="@font/conthrax_sb"
        android:background="@drawable/outline_button"
        android:text="@string/btn_registar"

        />


</RelativeLayout>